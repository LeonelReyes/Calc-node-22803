<h1>Crear Producto</h1>

<div class="row justify-content-center">
    <div class="col-6">
        <form action="/admin/productos/store" method="post" enctype="multipart/form-data">
            <div>
                <label for="nombre" class="form-label">Nombre: </label>
                <input type="text" class="form-control" id="nombre" name="nombre">
            </div>
            <div>
                <label for="imagen" class="form-label">Imagen: </label>
                <input type="file" multiple class="form-control" id="imagen" name="imagen">
            </div>
            <div>
                <label for="descripcion" class="form-label">Descripcion: </label>
                <textarea name="descripcion" class="form-control" id="descripcion" cols="10" rows="10"></textarea>
            </div>
            <div>
                <label for="categoria" class="form-label">Categoria: </label>
                <select class="form-select text-secondary" name="categoria" id="categoria">
                    <option selected>Seleccionar categoria</option>
                    <option value="1">Categoria 1</option>
                    <option value="2">Categoria 2</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Guardar</button>                
        </form>
    </div>
</div>

