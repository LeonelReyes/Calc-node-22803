<h1>Editar Producto</h1>

<div class="row justify-content-center">
    <div class="col-6">
        <form action="/admin/productos/update?_method=PUT" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="<%= producto.id %>">
            <div>
                <label for="nombre" class="form-label">Nombre: </label>
                <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto.nombre %>">
            </div>
            <div>
                <label for="imagen" class="form-label">Imagen: </label>
                <input type="file" multiple class="form-control" id="imagen" name="imagen">
                <img class="mt-4 mb-3" width="100" height="auto" src="/uploads/producto_<%=producto.id%>.jpg" alt="<%= producto.nombre %>">
            </div>
            <div>
                <label for="descripcion" class="form-label">Descripcion: </label>
                <textarea name="descripcion" class="form-control" id="descripcion" cols="10" rows="10" placeholder="<%= producto.descripcion %>"></textarea>
            </div>
            <div>
                <label for="categoria" class="form-label">Categoria: </label>
                <select class="form-control" name="categoria" id="categoria">
                    <option value=""></option>
                    <option value="1" <%= (producto.categoria_id == 1) ? 'selected' : '' %>>Categoria 1</option>
                    <option value="2" <%= (producto.categoria_id == 2) ? 'selected' : '' %>>Categoria 2</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        </form>
    </div>
</div>